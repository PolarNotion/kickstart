%meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
%meta{content: "width=device-width, initial-scale=1, shrink-to-fit=no", name: "viewport"}/

= csrf_meta_tags
= csp_meta_tag
= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

- @meta_site_title = Setting.site_title

= display_meta_tags site: @meta_site_title, title: @meta_page_title, description: @meta_page_description, og: { site: @meta_site_title, title: @meta_page_title, description: @meta_page_description, keywords: @meta_page_keywords, type: @meta_page_image_type, url: request.original_url, prev: "#{request.referer}", image: @meta_page_image_url }, twitter: { card: "photo", site: @meta_site_title, image: { _: @meta_page_image_url, width:  450, height: 300 } }

:css
  :root {
    --color-primary:         #{Setting.primary_color};
    --color-primary-dark:    #{Setting.primary_color_dark};
    --color-primary-light:   #{Setting.primary_color_light};
    --color-primary-muted:   #{Setting.primary_color_muted};
    --color-secondary:       #{Setting.secondary_color};
    --color-secondary-dark:  #{Setting.secondary_color_dark};
    --color-secondary-light: #{Setting.secondary_color_light};
    --color-secondary-muted: #{Setting.secondary_color_muted};
  }
